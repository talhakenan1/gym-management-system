@model GymManagementSystem.Models.AIRecommendation

@{
    ViewData["Title"] = "AI Analiz Başlat";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-primary text-white p-5 text-center position-relative overflow-hidden">
                    <div class="position-absolute top-0 start-0 w-100 h-100 bg-gradient opacity-50"></div>
                    <div class="position-relative z-1">
                        <i class="fas fa-robot fa-3x mb-3"></i>
                        <h2 class="fw-bold">Yapay Zeka Destekli Analiz</h2>
                        <p class="mb-0 opacity-75">Size en uygun programı hazırlamak için birkaç soruya cevap verin</p>
                    </div>
                </div>
                
                <div class="card-body p-5">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                        <h5 class="mb-4 text-primary border-bottom pb-2"><i class="fas fa-user-circle me-2"></i>Kişisel Bilgiler</h5>
                        
                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Age" class="form-control border-0 border-bottom rounded-0 shadow-none" placeholder="Yaş" />
                                    <label asp-for="Age">Yaşınız</label>
                                    <span asp-validation-for="Age" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="Gender" class="form-select border-0 border-bottom rounded-0 shadow-none">
                                        <option value="">Seçiniz...</option>
                                        <option value="Erkek">Erkek</option>
                                        <option value="Kadın">Kadın</option>
                                    </select>
                                    <label asp-for="Gender">Cinsiyet</label>
                                    <span asp-validation-for="Gender" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Height" class="form-control border-0 border-bottom rounded-0 shadow-none" placeholder="Boy" />
                                    <label asp-for="Height">Boy (cm)</label>
                                    <span asp-validation-for="Height" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Weight" class="form-control border-0 border-bottom rounded-0 shadow-none" placeholder="Kilo" step="0.1" />
                                    <label asp-for="Weight">Kilo (kg)</label>
                                    <span asp-validation-for="Weight" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <h5 class="mb-4 mt-5 text-primary border-bottom pb-2"><i class="fas fa-bullseye me-2"></i>Hedef ve Aktivite</h5>

                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="FitnessGoal" class="form-select border-0 border-bottom rounded-0 shadow-none">
                                        <option value="">Seçiniz...</option>
                                        <option value="@FitnessGoal.WeightLoss">Kilo Verme</option>
                                        <option value="@FitnessGoal.MuscleGain">Kas Kazanımı</option>
                                        <option value="@FitnessGoal.Endurance">Dayanıklılık</option>
                                        <option value="@FitnessGoal.Strength">Güç Artırımı</option>
                                        <option value="@FitnessGoal.GeneralFitness">Genel Fitness</option>
                                        <option value="@FitnessGoal.Flexibility">Esneklik</option>
                                    </select>
                                    <label asp-for="FitnessGoal">Öncelikli Hedefiniz</label>
                                    <span asp-validation-for="FitnessGoal" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="ActivityLevel" class="form-select border-0 border-bottom rounded-0 shadow-none">
                                        <option value="">Seçiniz...</option>
                                        <option value="@ActivityLevel.Sedentary">Hareketsiz (Masa başı)</option>
                                        <option value="@ActivityLevel.LightlyActive">Az Aktif (Haftada 1-3 gün)</option>
                                        <option value="@ActivityLevel.ModeratelyActive">Orta Aktif (Haftada 3-5 gün)</option>
                                        <option value="@ActivityLevel.VeryActive">Çok Aktif (Haftada 6-7 gün)</option>
                                        <option value="@ActivityLevel.ExtremelyActive">Aşırı Aktif (Günde 2 kez)</option>
                                    </select>
                                    <label asp-for="ActivityLevel">Mevcut Aktivite Düzeyi</label>
                                    <span asp-validation-for="ActivityLevel" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <h5 class="mb-4 mt-5 text-primary border-bottom pb-2"><i class="fas fa-cogs me-2"></i>Tercihler</h5>

                        <div class="mb-4">
                            <label class="form-label text-muted small">Analiz Türü</label>
                            <div class="d-flex gap-2">
                                <div class="flex-grow-1">
                                    <input type="radio" class="btn-check" name="Type" id="typeEx" value="@RecommendationType.Exercise" autocomplete="off">
                                    <label class="btn btn-outline-light text-dark w-100 border" for="typeEx"><i class="fas fa-dumbbell me-2 text-success"></i>Egzersiz</label>
                                </div>
                                <div class="flex-grow-1">
                                    <input type="radio" class="btn-check" name="Type" id="typeDiet" value="@RecommendationType.Diet" autocomplete="off">
                                    <label class="btn btn-outline-light text-dark w-100 border" for="typeDiet"><i class="fas fa-carrot me-2 text-warning"></i>Beslenme</label>
                                </div>
                                <div class="flex-grow-1">
                                    <input type="radio" class="btn-check" name="Type" id="typeComb" value="@RecommendationType.Combined" autocomplete="off" checked>
                                    <label class="btn btn-outline-light text-dark w-100 border" for="typeComb"><i class="fas fa-layer-group me-2 text-primary"></i>Kombine</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-5">
                            <label asp-for="PhotoPath" class="form-label text-muted small">Vücut Fotoğrafı (İsteğe Bağlı)</label>
                            <input type="file" name="photo" class="form-control" accept="image/*" />
                            <div class="form-text">Fotoğraf yüklemeniz durumunda AI görsel analiz yaparak daha hassas öneriler sunabilir.</div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill shadow-sm">
                                <i class="fas fa-magic me-2"></i>Analizi Başlat
                            </button>
                            <a asp-action="Index" class="btn btn-light text-muted rounded-pill">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <style>
        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label,
        .form-floating > .form-select ~ label {
            opacity: .65;
            transform: scale(.85) translateY(-.5rem) translateX(.15rem);
        }
        .form-control, .form-select { border-bottom: 2px solid #dee2e6 !important; }
        .form-control:focus, .form-select:focus { border-bottom-color: #0d6efd !important; }
    </style>
}
