@model GymManagementSystem.Models.Appointment

@{
    ViewData["Title"] = "Randevu Detayları";
    
    string GetStatusClass(GymManagementSystem.Models.AppointmentStatus status) => status switch
    {
        GymManagementSystem.Models.AppointmentStatus.Pending => "status-pending",
        GymManagementSystem.Models.AppointmentStatus.Confirmed => "status-confirmed",
        GymManagementSystem.Models.AppointmentStatus.Cancelled => "status-cancelled",
        GymManagementSystem.Models.AppointmentStatus.Completed => "status-completed",
        _ => "status-pending"
    };
    
    string GetStatusText(GymManagementSystem.Models.AppointmentStatus status) => status switch
    {
        GymManagementSystem.Models.AppointmentStatus.Pending => "Beklemede",
        GymManagementSystem.Models.AppointmentStatus.Confirmed => "Onaylandı",
        GymManagementSystem.Models.AppointmentStatus.Cancelled => "İptal Edildi",
        GymManagementSystem.Models.AppointmentStatus.Completed => "Tamamlandı",
        _ => "Bilinmiyor"
    };
    
    string GetStatusIcon(GymManagementSystem.Models.AppointmentStatus status) => status switch
    {
        GymManagementSystem.Models.AppointmentStatus.Pending => "fas fa-hourglass-half",
        GymManagementSystem.Models.AppointmentStatus.Confirmed => "fas fa-check-circle",
        GymManagementSystem.Models.AppointmentStatus.Cancelled => "fas fa-times-circle",
        GymManagementSystem.Models.AppointmentStatus.Completed => "fas fa-flag-checkered",
        _ => "fas fa-question-circle"
    };
}

<style>
    .details-hero {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.7) 0%, rgba(37, 99, 235, 0.95) 100%);
        border-radius: 20px;
        padding: 2.5rem;
        color: white;
        margin-bottom: 2rem;
    }
    
    .detail-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        border: none;
        overflow: hidden;
    }
    
    .detail-card .card-header {
        background: #f8f9fa;
        border-bottom: 1px solid #e9ecef;
        padding: 1.25rem 1.5rem;
    }
    
    .detail-card .card-body {
        padding: 1.5rem;
    }
    
    .info-row {
        padding: 1rem 0;
        border-bottom: 1px solid #f0f0f0;
    }
    
    .info-row:last-child {
        border-bottom: none;
    }
    
    .info-label {
        color: #6c757d;
        font-size: 0.875rem;
        font-weight: 500;
    }
    
    .info-value {
        color: #212529;
        font-weight: 600;
    }
    
    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.875rem;
    }
    
    .status-pending { background: linear-gradient(135deg, #f6d365 0%, #fda085 100%); color: white; }
    .status-confirmed { background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); color: white; }
    .status-cancelled { background: linear-gradient(135deg, #eb3349 0%, #f45c43 100%); color: white; }
    .status-completed { background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); color: white; }
    
    .trainer-info {
        display: flex;
        align-items: center;
        gap: 1rem;
    }
    
    .trainer-avatar {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
    }
    
    .service-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.25rem;
    }
    
    .time-card {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 1.5rem;
        text-align: center;
    }
    
    .time-card .time-label {
        font-size: 0.75rem;
        color: #6c757d;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
    }
    
    .time-card .time-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: #212529;
    }
    
    .btn-gradient {
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.9) 0%, rgba(37, 99, 235, 1) 100%);
        border: none;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-gradient:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(37, 99, 235, 0.4);
        color: white;
    }
    
    .btn-cancel {
        background: linear-gradient(135deg, #eb3349 0%, #f45c43 100%);
        border: none;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .btn-cancel:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(235, 51, 73, 0.4);
        color: white;
    }
</style>

<div class="container py-4">
    <!-- Hero Section -->
    <div class="details-hero">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb mb-0" style="--bs-breadcrumb-divider-color: rgba(255,255,255,0.5);">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Appointments")" class="text-white opacity-75 text-decoration-none">Randevularım</a></li>
                        <li class="breadcrumb-item active text-white" aria-current="page">Detaylar</li>
                    </ol>
                </nav>
                <h1 class="display-6 fw-bold mb-2">
                    <i class="fas fa-calendar-check me-3"></i>Randevu Detayları
                </h1>
                <p class="lead opacity-75 mb-0">Randevu #@Model.Id - @Model.AppointmentDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</p>
            </div>
            <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                <span class="status-badge @GetStatusClass(Model.Status)">
                    <i class="@GetStatusIcon(Model.Status) me-2"></i>@GetStatusText(Model.Status)
                </span>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Main Details -->
        <div class="col-lg-8">
            <!-- Date & Time Card -->
            <div class="detail-card mb-4">
                <div class="card-header">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-clock text-primary me-2"></i>Tarih ve Saat Bilgileri</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="time-card">
                                <div class="time-label">Tarih</div>
                                <div class="time-value text-primary">
                                    <i class="fas fa-calendar-day me-2"></i>
                                    @Model.AppointmentDate.ToString("dd MMM yyyy", new System.Globalization.CultureInfo("tr-TR"))
                                </div>
                                <small class="text-muted">@Model.AppointmentDate.ToString("dddd", new System.Globalization.CultureInfo("tr-TR"))</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="time-card">
                                <div class="time-label">Başlangıç</div>
                                <div class="time-value text-success">
                                    <i class="fas fa-play me-2"></i>
                                    @Model.StartTime.ToString(@"hh\:mm")
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="time-card">
                                <div class="time-label">Bitiş</div>
                                <div class="time-value text-danger">
                                    <i class="fas fa-stop me-2"></i>
                                    @Model.EndTime.ToString(@"hh\:mm")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Trainer Info Card -->
            <div class="detail-card mb-4">
                <div class="card-header">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-user-tie text-primary me-2"></i>Antrenör Bilgileri</h5>
                </div>
                <div class="card-body">
                    @if (Model.Trainer != null)
                    {
                        <div class="trainer-info">
                            <div class="trainer-avatar">
                                <i class="fas fa-user"></i>
                            </div>
                            <div>
                                <h5 class="mb-1 fw-bold">@Model.Trainer.FirstName @Model.Trainer.LastName</h5>
                                @if (!string.IsNullOrEmpty(Model.Trainer.Specialization))
                                {
                                    <span class="badge bg-primary-subtle text-primary">@Model.Trainer.Specialization</span>
                                }
                                @if (!string.IsNullOrEmpty(Model.Trainer.Email))
                                {
                                    <p class="text-muted mb-0 mt-2"><i class="fas fa-envelope me-2"></i>@Model.Trainer.Email</p>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Antrenör bilgisi bulunamadı.</p>
                    }
                </div>
            </div>

            <!-- Service Info Card -->
            <div class="detail-card mb-4">
                <div class="card-header">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-dumbbell text-primary me-2"></i>Hizmet Bilgileri</h5>
                </div>
                <div class="card-body">
                    @if (Model.Service != null)
                    {
                        <div class="d-flex align-items-start gap-3">
                            <div class="service-icon">
                                <i class="fas fa-dumbbell"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="mb-1 fw-bold">@Model.Service.Name</h5>
                                @if (!string.IsNullOrEmpty(Model.Service.Description))
                                {
                                    <p class="text-muted mb-2">@Model.Service.Description</p>
                                }
                                <div class="d-flex flex-wrap gap-3">
                                    <span class="badge bg-light text-dark">
                                        <i class="fas fa-clock me-1"></i>@Model.Service.Duration dakika
                                    </span>
                                    <span class="badge bg-success-subtle text-success">
                                        <i class="fas fa-tag me-1"></i>@Model.Service.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">Hizmet bilgisi bulunamadı.</p>
                    }
                </div>
            </div>

            <!-- Notes Card -->
            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="detail-card">
                    <div class="card-header">
                        <h5 class="mb-0 fw-bold"><i class="fas fa-sticky-note text-primary me-2"></i>Notlar</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.Notes</p>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Summary Card -->
            <div class="detail-card mb-4">
                <div class="card-header">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-receipt text-primary me-2"></i>Özet</h5>
                </div>
                <div class="card-body">
                    <div class="info-row">
                        <div class="info-label">Randevu No</div>
                        <div class="info-value">#@Model.Id</div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">Durum</div>
                        <div class="info-value">
                            <span class="status-badge @GetStatusClass(Model.Status)" style="padding: 0.25rem 0.75rem; font-size: 0.75rem;">
                                @GetStatusText(Model.Status)
                            </span>
                        </div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">Toplam Ücret</div>
                        <div class="info-value text-success fs-5">@Model.TotalPrice.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">Oluşturulma Tarihi</div>
                        <div class="info-value">@Model.CreatedAt.ToString("dd MMM yyyy HH:mm", new System.Globalization.CultureInfo("tr-TR"))</div>
                    </div>
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <div class="info-row">
                            <div class="info-label">Son Güncelleme</div>
                            <div class="info-value">@Model.UpdatedAt.Value.ToString("dd MMM yyyy HH:mm", new System.Globalization.CultureInfo("tr-TR"))</div>
                        </div>
                    }
                </div>
            </div>

            <!-- Actions Card -->
            <div class="detail-card">
                <div class="card-header">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-cogs text-primary me-2"></i>İşlemler</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Index" class="btn btn-gradient">
                            <i class="fas fa-arrow-left me-2"></i>Randevularıma Dön
                        </a>
                        @if (Model.Status == GymManagementSystem.Models.AppointmentStatus.Pending || 
                             Model.Status == GymManagementSystem.Models.AppointmentStatus.Confirmed)
                        {
                            <form asp-action="Cancel" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Bu randevuyu iptal etmek istediğinizden emin misiniz?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-cancel w-100">
                                    <i class="fas fa-times me-2"></i>Randevuyu İptal Et
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
