@model GymManagementSystem.Models.Service

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h4 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-plus"></i> Yeni Hizmet Ekle
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">
                                <i class="fas fa-dumbbell"></i> Hizmet Adı *
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Örn: Personal Training, Yoga, Pilates" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-info-circle"></i> Açıklama
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Hizmet hakkında detaylı bilgi..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Category" class="form-label">
                                <i class="fas fa-folder"></i> Kategori *
                            </label>
                            <select asp-for="Category" class="form-select">
                                <option value="">Kategori seçin</option>
                                <option value="Fitness">Fitness</option>
                                <option value="Yoga">Yoga</option>
                                <option value="Cardio">Cardio</option>
                                <option value="Strength">Strength (Güç Antrenmanı)</option>
                                <option value="Pilates">Pilates</option>
                                <option value="CrossFit">CrossFit</option>
                                <option value="Genel">Genel</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Duration" class="form-label">
                                        <i class="fas fa-clock"></i> Süre (Dakika) *
                                    </label>
                                    <input asp-for="Duration" class="form-control" type="number" min="15" max="300" step="15" placeholder="60" />
                                    <span asp-validation-for="Duration" class="text-danger"></span>
                                    <div class="form-text">15 dakika aralıklarla giriniz</div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="Price" class="form-label">
                                        <i class="fas fa-tag"></i> Fiyat (₺) *
                                    </label>
                                    <input asp-for="Price" class="form-control" type="number" min="0" step="0.01" placeholder="150.00" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label asp-for="GymId" class="form-label">
                                        <i class="fas fa-building"></i> Spor Salonu *
                                    </label>
                                    <select asp-for="GymId" class="form-select" asp-items="ViewBag.GymId">
                                        <option value="">Spor salonu seçin</option>
                                    </select>
                                    <span asp-validation-for="GymId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Preview Card -->
                        <div class="card bg-light mb-4">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="fas fa-eye"></i> Önizleme
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h5 id="preview-name" class="text-primary">Hizmet Adı</h5>
                                        <p id="preview-description" class="text-muted">Hizmet açıklaması burada görünecek...</p>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="text-center">
                                            <div class="row">
                                                <div class="col-6">
                                                    <i class="fas fa-clock text-primary"></i>
                                                    <p class="mb-0 small text-muted">Süre</p>
                                                    <strong id="preview-duration">-- dk</strong>
                                                </div>
                                                <div class="col-6">
                                                    <i class="fas fa-tag text-success"></i>
                                                    <p class="mb-0 small text-muted">Fiyat</p>
                                                    <strong id="preview-price" class="text-success">₺--</strong>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary btn-lg me-3">
                                <i class="fas fa-save"></i> Hizmeti Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Live preview functionality
        $(document).ready(function() {
            function updatePreview() {
                var name = $('#Name').val() || 'Hizmet Adı';
                var description = $('#Description').val() || 'Hizmet açıklaması burada görünecek...';
                var duration = $('#Duration').val() || '--';
                var price = $('#Price').val() || '--';
                
                $('#preview-name').text(name);
                $('#preview-description').text(description);
                $('#preview-duration').text(duration + ' dk');
                $('#preview-price').text('₺' + price);
            }
            
            $('#Name, #Description, #Duration, #Price').on('input', updatePreview);
        });
    </script>
}