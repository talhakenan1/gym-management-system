@model IEnumerable<GymManagementSystem.Models.Trainer>

@{
    ViewData["Title"] = "Antrenörlerimiz";
}

<div class="container py-5">
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8 text-center">
            <h1 class="display-4 fw-bold mb-3">Uzman Antrenörlerimiz</h1>
            <p class="lead text-muted">Fitness hedeflerinize ulaşmanız için size rehberlik edecek deneyimli ekibimizle tanışın</p>
        </div>
    </div>

    <div class="row">
        @foreach (var trainer in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-hover">
                    <div class="card-body text-center p-4">
                        <div class="trainer-avatar mb-4">
                            <div class="avatar-circle bg-light mx-auto d-flex align-items-center justify-content-center">
                                <i class="fas fa-user fa-3x text-secondary"></i>
                            </div>
                        </div>
                        
                        <h4 class="card-title fw-bold mb-1">@trainer.FirstName @trainer.LastName</h4>
                        <p class="text-primary fw-medium mb-3">@trainer.Specialization</p>
                        
                        <div class="d-flex justify-content-center align-items-center text-muted mb-3">
                            <i class="fas fa-medal me-2 text-warning"></i>
                            <span>@trainer.Experience yıl deneyim</span>
                        </div>

                        @if (!string.IsNullOrEmpty(trainer.Bio))
                        {
                            <p class="card-text text-muted small mb-4">
                                @(trainer.Bio.Length > 100 ? trainer.Bio.Substring(0, 100) + "..." : trainer.Bio)
                            </p>
                        }

                        <div class="mb-4">
                            @foreach (var ts in trainer.TrainerServices.Take(3))
                            {
                                <span class="badge bg-light text-dark me-1 mb-1 border">@ts.Service.Name</span>
                            }
                        </div>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Appointments" asp-action="Create" asp-route-trainerId="@trainer.Id" class="btn btn-primary w-100 rounded-pill">
                                <i class="fas fa-calendar-plus me-2"></i>Randevu Al
                            </a>
                        }
                        else
                        {
                             <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary w-100 rounded-pill">
                                <i class="fas fa-sign-in-alt me-2"></i>Giriş Yapın
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-users-slash fa-4x text-muted opacity-50"></i>
            </div>
            <h3 class="text-muted fw-light">Henüz antrenör bulunmuyor</h3>
            <p class="text-muted">Ekibimiz yakında burada olacak!</p>
        </div>
    }
</div>

<style>
    .shadow-hover {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.05);
    }
    .shadow-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.1);
    }
    .avatar-circle {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 4px solid #fff;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }
</style>
