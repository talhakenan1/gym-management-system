@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content container">
        <h1 class="display-3 fw-bold text-white">FitLife Gym'e Hoş Geldiniz</h1>
        <p class="text-white lead">Profesyonel antrenörlerimiz ve modern ekipmanlarımızla fitness hedeflerinize ulaşın</p>
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="Appointments" asp-action="Create" class="btn btn-hero">
                <i class="fas fa-calendar-check me-2"></i>Randevu Al
            </a>
        }
        else
        {
             <a asp-controller="Appointments" asp-action="Create" class="btn btn-hero">
                <i class="fas fa-calendar-check me-2"></i>Randevu Al
            </a>
        }
    </div>
</div>

<!-- Services Section -->
<div class="container py-5 mb-5">
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8 text-center">
            <h2 class="section-title display-6">Hizmetlerimiz</h2>
            <p class="section-subtitle lead">Size en uygun hizmeti seçin ve fitness yolculuğunuza başlayın</p>
        </div>
    </div>
    
    <div class="row">
        @if (ViewBag.Services != null)
        {
            @foreach (var service in ViewBag.Services)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 p-4 text-center">
                        <div class="card-body">
                            <div class="service-icon">
                                @if (service.Name.Contains("Personal"))
                                {
                                    <i class="fas fa-heartbeat fa-3x"></i>
                                }
                                else if (service.Name.Contains("Group"))
                                {
                                    <i class="fas fa-users fa-3x"></i>
                                }
                                else if (service.Name.Contains("Yoga"))
                                {
                                    <i class="fas fa-leaf fa-3x"></i>
                                }
                                else if (service.Name.Contains("Cardio"))
                                {
                                     <i class="fas fa-running fa-3x"></i>
                                }
                                else if (service.Name.Contains("Weight"))
                                {
                                     <i class="fas fa-dumbbell fa-3x"></i>
                                }
                                else
                                {
                                    <i class="fas fa-dumbbell fa-3x"></i>
                                }
                            </div>
                            <h5 class="card-title fw-bold mb-3">@service.Name</h5>
                            <p class="card-text text-muted mb-3">@service.Description</p>
                            <div class="d-flex justify-content-center align-items-center text-muted mb-3">
                                <i class="far fa-clock me-2"></i>
                                <span>@service.Duration dakika</span>
                            </div>
                            <h4 class="service-price">₺@service.Price.ToString("F2")</h4>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    
    <div class="text-center mt-4">
        <a asp-controller="Home" asp-action="Services" class="btn btn-custom-primary">
            <i class="fas fa-list me-2"></i>Tüm Hizmetleri Gör
        </a>
    </div>
</div>

<!-- Trainers Section -->
<div class="bg-light py-5">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h2 class="section-title display-6">Uzman Antrenörlerimiz</h2>
                <p class="section-subtitle lead">Deneyimli ve sertifikalı antrenörlerimizle tanışın</p>
            </div>
        </div>

        <div class="row">
            @if (ViewBag.Trainers != null)
            {
                @foreach (var trainer in ViewBag.Trainers)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 p-4 text-center bg-white">
                            <div class="trainer-img-container position-relative">
                                <!-- Placeholder or icon if no photo -->
                                <div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center text-secondary">
                                     <i class="fas fa-user fa-3x"></i>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <h5 class="card-title fw-bold mb-1">@trainer.FirstName @trainer.LastName</h5>
                                <p class="text-muted small mb-3">
                                    @{
                                        var specs = trainer.Specialization?.Split(',') ?? new string[0];
                                        if(specs.Length > 0) { @specs[0] } 
                                    }
                                </p>
                                
                                <div class="d-flex justify-content-center align-items-center text-muted mb-3 small">
                                    <i class="fas fa-stopwatch me-2"></i>
                                    <span>@trainer.Experience yıl deneyim</span>
                                </div>

                                <div class="mt-2">
                                     @foreach (var spec in specs)
                                     {
                                         <span class="trainer-badge">@spec.Trim()</span>
                                     }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

        <div class="text-center mt-4">
            <a asp-controller="Home" asp-action="Trainers" class="btn btn-custom-primary">
                <i class="fas fa-users me-2"></i>Tüm Antrenörleri Gör
            </a>
        </div>
    </div>
</div>
