@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
}

<div class="d-flex align-items-center mb-4">
    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
        <i class="fas fa-user fa-2x"></i>
    </div>
    <div>
        <h4 class="mb-1 fw-bold">Profil Bilgileri</h4>
        <p class="text-muted mb-0">Kişisel bilgilerinizi görüntüleyin ve düzenleyin</p>
    </div>
</div>

<partial name="_StatusMessage" for="StatusMessage" />

<form id="profile-form" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    
    <div class="row g-3">
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control bg-light" disabled />
                <label asp-for="Username"><i class="fas fa-at me-2"></i>Kullanıcı Adı</label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Telefon numaranız" />
                <label asp-for="Input.PhoneNumber"><i class="fas fa-phone me-2"></i>Telefon Numarası</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" placeholder="Adınız" />
                <label asp-for="Input.FirstName"><i class="fas fa-user me-2"></i>Ad</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" placeholder="Soyadınız" />
                <label asp-for="Input.LastName"><i class="fas fa-user me-2"></i>Soyad</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>
    </div>
    
    <hr class="my-4" />
    
    <div class="d-flex justify-content-end gap-2">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary px-4">
            <i class="fas fa-times me-2"></i>İptal
        </a>
        <button id="update-profile-button" type="submit" class="btn btn-primary px-4">
            <i class="fas fa-save me-2"></i>Kaydet
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

