@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Şifre Değiştir";
}

<div class="d-flex align-items-center mb-4">
    <div class="bg-warning text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
        <i class="fas fa-key fa-2x"></i>
    </div>
    <div>
        <h4 class="mb-1 fw-bold">Şifre Değiştir</h4>
        <p class="text-muted mb-0">Hesap güvenliğiniz için şifrenizi düzenli olarak değiştirin</p>
    </div>
</div>

<partial name="_StatusMessage" for="StatusMessage" />

<form id="change-password-form" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    
    <div class="row g-3">
        <div class="col-md-12">
            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" />
                <label asp-for="Input.OldPassword"><i class="fas fa-lock me-2"></i>Mevcut Şifre</label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" />
                <label asp-for="Input.NewPassword"><i class="fas fa-key me-2"></i>Yeni Şifre</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                <label asp-for="Input.ConfirmPassword"><i class="fas fa-check-double me-2"></i>Yeni Şifre (Tekrar)</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
    </div>
    
    <div class="card bg-light border-0 p-3 mb-4">
        <p class="text-muted small mb-2"><i class="fas fa-shield-alt me-2"></i><strong>Güçlü şifre önerileri:</strong></p>
        <ul class="text-muted small mb-0 ps-3">
            <li>En az 6 karakter uzunluğunda</li>
            <li>Büyük ve küçük harf kombinasyonu</li>
            <li>Rakam ve özel karakterler içermesi</li>
        </ul>
    </div>
    
    <hr class="my-4" />
    
    <div class="d-flex justify-content-end gap-2">
        <a asp-page="./Index" class="btn btn-outline-secondary px-4">
            <i class="fas fa-times me-2"></i>İptal
        </a>
        <button type="submit" class="btn btn-warning px-4">
            <i class="fas fa-save me-2"></i>Şifreyi Güncelle
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

