@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Kişisel Veriler";
}

<div class="d-flex align-items-center mb-4">
    <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
        <i class="fas fa-database fa-2x"></i>
    </div>
    <div>
        <h4 class="mb-1 fw-bold">Kişisel Veriler</h4>
        <p class="text-muted mb-0">Kişisel verilerinizi indirin veya hesabınızı silin</p>
    </div>
</div>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row g-4">
    <div class="col-md-6">
        <div class="card border-0 bg-light h-100">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-download fa-2x text-primary me-3"></i>
                    <h5 class="mb-0 fw-bold">Verilerimi İndir</h5>
                </div>
                <p class="text-muted small">
                    Hesabınızla ilişkili tüm kişisel verilerinizi JSON formatında indirebilirsiniz.
                </p>
                <form asp-page-handler="DownloadPersonalData" method="post">
                    <button class="btn btn-primary w-100" type="submit">
                        <i class="fas fa-file-download me-2"></i>İndir
                    </button>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card border-0 bg-danger bg-opacity-10 h-100">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-trash-alt fa-2x text-danger me-3"></i>
                    <h5 class="mb-0 fw-bold text-danger">Hesabı Sil</h5>
                </div>
                <p class="text-muted small">
                    Hesabınızı silmek geri alınamaz bir işlemdir. Tüm verileriniz kalıcı olarak silinecektir.
                </p>
                <a asp-page="./DeletePersonalData" class="btn btn-outline-danger w-100">
                    <i class="fas fa-user-times me-2"></i>Hesabı Sil
                </a>
            </div>
        </div>
    </div>
</div>

<div class="alert alert-info mt-4" role="alert">
    <i class="fas fa-info-circle me-2"></i>
    <strong>Bilgilendirme:</strong> KVKK kapsamında kişisel verilerinize erişim ve silme hakkına sahipsiniz.
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

